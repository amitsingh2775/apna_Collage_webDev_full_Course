
<% layout("/layouts/boilerplate") %>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <h3>Add Your Hotel</h3>
            <br>

    <form method="post" action="/listings" novalidate class="needs-validation">
        <div class="mb-3">
            <label for="title" class="form-label">Enter Your Title</label>
            <input name="listing[title]" placeholder="enter your title" type="text" required class="form-control">
            <div class="invalid-feedback">required to fill</div>
        </div>
       
       <div class="mb-3">
        <label for="description" class="form-label">Enter Your description</label>
        <textarea name="listing[description]" placeholder="crown of goa" required class="form-control"></textarea>
        <div class="invalid-feedback">required to fill</div>
       </div>
        
       <div class="mb-3"> <label for="image" class="form-label">Enter Your ImgUrl</label>
        <input name="listing[image]" placeholder="enter image url" class="form-control">
        <div class="invalid-feedback">fill vaild link</div>
        </div>
         <div class="row">
            <div class="mb-3 col-4"> <label for="price" class="form-label">Enter Your price</label>
                <input name="listing[price]" placeholder="5000 " type="text" required class="form-control">
                <div class="invalid-feedback"> fill please</div>
            </div>
                
               <div class="mb-3 col-4"> <label for="country" class="form-label">Enter Your country</label>
                <input name="listing[country]" placeholder="Ex-inda" type="text" required class="form-control">
                <div class="invalid-feedback">required to fill</div>
            </div>
            <div class="mb-3 col-4"> <label for="location" class="form-label">Enter Your location</label>
                <input name="listing[location]" placeholder="goa" type="text"   class="form-control"></div>
                <div class="invalid-feedback">required to fill</div>
         </div>
      
        
      
        <br>
        <button class="btn btn-primary">Add new hotel</button>
        <br>
        <br>

    </form>
</div>
</div>
</body>
